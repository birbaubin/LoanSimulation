<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Loan Simulation Platform</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link href="https://fonts.googleapis.com/css?family=Poppins:300,400,500,600,700,800,900" rel="stylesheet">
</head>
<body>

    <div id="sidebar">
        <div class="wrapper d-flex align-items-stretch">
            <nav id="sidebar">
                <div class="p-4 pt-5">
                    <a href="#" class="img mb-5"><img src="~/Content/Images/logo.png" class="logo"/></a>
                    <ul class="list-unstyled components mb-5">
                        <li>
                            @Html.ActionLink("Home", "Index")
                        </li>
                        <li>
                            @Html.ActionLink("Simulation", "Simulation")
                        </li>
                        <li>
                            @Html.ActionLink("About", "About")
                        </li>
                    </ul>

                    <div class="footer">
                        Contenu
                    </div>

                </div>
            </nav>
            <div id="content" class="p-4 p-md-5">

            </div>
        </div>
    </div>
    <div class="content-inside">
        @RenderBody()
    </div>
   
    @RenderSection("scripts", required: false)
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/Scripts/main.js")

</body>
</html>
